<%- model_class = Survey -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @survey.name %></dd>
  <dt><%= model_class.human_attribute_name(:questions) %>:</dt>
  <dd>
  	<ol>
  	<% @survey.questions.each{ |question| %>
  		<li><%= simple_format question.content %>
  			<ol>
  				<% question.answers.each { |answer| %>
  					<li><%= simple_format answer.content %></li>
  				<% } %>
  			</ol>
  		</li>
    <% } %>
   	</ol>
  </dd>
</dl>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              surveys_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_survey_path(@survey), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              survey_path(@survey),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
