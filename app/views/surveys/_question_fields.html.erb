<div>
	<p>  
	  <%= f.label :content, "Question" %><br />  
	  <%= f.text_area :content, :rows => 3 %><br />  
	  <%= f.check_box :_destroy %>  
	  <%= f.label :_destroy, "Remove Question", :style => "display:inline" %>  
	</p>  
	<div class="answers">
		<%= f.fields_for :answers do |builder| %>  
		  <%= render :partial => 'surveys/answer_fields', :locals => {f: builder} %>  
		<% end %>  
	</div>
</div>